<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/battery_linear"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/battery_nr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="100%" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_battery_full_black_24dp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/bluetooth"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/circle_form"
            android:src="@drawable/ic_bluetooth" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bluetooth"
            android:src="@drawable/ic_trending_flat_black_24dp" />

        <ImageView
            android:id="@+id/another_form"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="80dp"
            android:layout_toRightOf="@+id/bluetooth"
            android:background="@drawable/circle_form"
            android:src="@drawable/heart_pressure" />


    </RelativeLayout>

</LinearLayout>
